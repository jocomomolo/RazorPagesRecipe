@page
@model RazorPagesRecipe.Pages.Recipes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>


<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Recipe.Title" class="control-label"></label>
                <input asp-for="Recipe.Title" class="form-control" />
                <span asp-validation-for="Recipe.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Category.Name" class="control-label">Category</label>
                <select asp-for="SelectedCategoryID" asp-items="@Model.Categories" class="form-control"><option>Select one</option></select>
                <span asp-validation-for="Recipe.Category.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*placeholder="Please separate Ingredients with <br />"*@
                <label asp-for="Recipe.Ingredients" class="control-label">Ingredients</label>
                <textarea class="form-control" input asp-for="Recipe.Ingredients" rows="5"></textarea>
                <span asp-validation-for="Recipe.Ingredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Utensils" class="control-label">Utensils</label>
                <select multiple="multiple" asp-for="SelectedUtensilsID" asp-items="@Model.Utensils" class="form-control"><option>Select many</option></select>
                <span asp-validation-for="Utensils" class="text-danger"></span>
            </div>
                <div class="form-group">
                    <label asp-for="Recipe.Description" class="control-label"></label>
                    <textarea class="form-control" input asp-for="Recipe.Description" rows="5"></textarea>
                    <span asp-validation-for="Recipe.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Recipe.PreparationTime" class="control-label"></label>
                    <input asp-for="Recipe.PreparationTime" class="form-control" />
                    <span asp-validation-for="Recipe.PreparationTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Recipe.CookingTime" class="control-label"></label>
                    <input asp-for="Recipe.CookingTime" class="form-control" />
                    <span asp-validation-for="Recipe.CookingTime" class="text-danger"></span>
                </div>
                <div class="custom-control-lg custom-control custom-checkbox">
                    <input asp-for="Recipe.Freezable" class="custom-control-input" id="checkbox-large" type="checkbox" />
                    <label class="custom-control-label" for="checkbox-large">
                        Freezable?
                    </label>
                    <span asp-validation-for="Recipe.Freezable" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <label asp-for="Recipe.Source" class="control-label"></label>
                    <input asp-for="Recipe.Source" class="form-control" />
                    <span asp-validation-for="Recipe.Source" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Recipe.Owner" class="control-label"></label>
                    <input asp-for="Recipe.Owner" class="form-control" />
                    <span asp-validation-for="Recipe.Owner" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
</form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
