@page
@model RazorPagesRecipe.Pages.Recipes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<hr />

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Recipe.RecipeID" />
   
    <div class="form-group">
        <label asp-for="Recipe.Title" class="control-label"></label>
        <input asp-for="Recipe.Title" class="form-control" />
        <span asp-validation-for="Recipe.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.Category.Name" class="control-label"></label>
        <input asp-for="Recipe.Category.Name" class="form-control" />
        <span asp-validation-for="Recipe.Category.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.Source" class="control-label"></label>
        <input asp-for="Recipe.Source" class="form-control" />
        <span asp-validation-for="Recipe.Source" class="text-danger"></span>
    </div>
    <hr />
    @{int i = 1;}
    @foreach (var item in Model.Recipe.Ingredients)
    {
        <div class="form-group">
            <label asp-for="@item.Name" class="control-label">Ingredient @i</label>
            <input asp-for="@item.Name" class="form-control" />
            <span asp-validation-for="@item.Name" class="text-danger"></span>
        </div>
        i++;
    }
    <hr />
    @{int j = 1;}
    @foreach (var item in Model.Recipe.RecipeUtensils)
    {
        <div class="form-group">
            <label asp-for="@item.Utensil.Name" class="control-label">Utensil @j</label>
            <input asp-for="@item.Utensil.Name" class="form-control" />
            <span asp-validation-for="@item.Utensil.Name" class="text-danger"></span>
        </div>
        j++;
    }
    <hr />
    <div class="form-group">
        <label asp-for="Recipe.Description" class="control-label"></label>
        <pre><textarea class="form-control" input asp-for="Recipe.Description" rows="5"></textarea></pre>
        <span asp-validation-for="Recipe.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.Owner" class="control-label"></label>
        <input asp-for="Recipe.Owner" class="form-control" />
        <span asp-validation-for="Recipe.Owner" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.CookingTime" class="control-label"></label>
        <input asp-for="Recipe.CookingTime" class="form-control" />
        <span asp-validation-for="Recipe.CookingTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.PreparationTime" class="control-label"></label>
        <input asp-for="Recipe.PreparationTime" class="form-control" />
        <span asp-validation-for="Recipe.PreparationTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.TotalTime" class="control-label"></label>
        <input asp-for="Recipe.TotalTime" class="form-control" />
        <span asp-validation-for="Recipe.TotalTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.Source" class="control-label"></label>
        <input asp-for="Recipe.Source" class="form-control" />
        <span asp-validation-for="Recipe.Source" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
